#include "stdafx.h"
#include<iostream>
using namespace std;

int main()
{
	setlocale(LC_ALL, "RUSSIAN");
	int a, b;
	cout << "Выберите одного из 10 котиков. Потом сможете покормить его:)" << endl;
	cin >> a;

	switch (a)
	{
	case 1:
		cout << "Этот кот ест только молоко. Введите 1, чтобы покормить его." << endl;
		cin >> b;
		if (b = 1)
		{
			cout << "Кот покормлен!" << endl;
		}
		else
		{
			cout << "Кота не покормили!" << endl;
		}
		break;

	case 2:
		cout << "Этот кот ест только куриное филе. Введите 1, чтобы покормить его." << endl;
		cin >> b;
		if (b = 1)
		{
			cout << "Кот покормлен!" << endl;
		}
		else
		{
			cout << "Кота не покормили!" << endl;
		}
		break;

	case 3:
		cout << "Этот кот ест только рыбу. Введите 1, чтобы покормить его." << endl;
		cin >> b;
		if (b = 1)
		{
			cout << "Кот покормлен!" << endl;
		}
		else
		{
			cout << "Кота не покормили!" << endl;
		}
		break;

	case 4:
		cout << "Этот кот ест только свинину. Введите 1, чтобы покормить его." << endl;
		cin >> b;
		if (b = 1)
		{
			cout << "Кот покормлен!" << endl;
		}
		else
		{
			cout << "Кота не покормили!" << endl;
		}
		break;

	case 5:
		cout << "Этот кот ест только жареннную рыбу. Введите 1, чтобы покормить его." << endl;
		cin >> b;
		if (b = 1)
		{
			cout << "Кот покормлен!" << endl;
		}
		else
		{
			cout << "Кота не покормили!" << endl;
		}
		break;

	case 6:
		cout << "Этот кот ест только кошачий корм. Введите 1, чтобы покормить его." << endl;
		cin >> b;
		if (b = 1)
		{
			cout << "Кот покормлен!" << endl;
		}
		else
		{
			cout << "Кота не покормили!" << endl;
		}
		break;

	case 7:
		cout << "Этот кот ест только конфеты. Введите 1, чтобы покормить его." << endl;
		cin >> b;
		if (b = 1)
		{
			cout << "Кот покормлен!" << endl;
		}
		else
		{
			cout << "Кота не покормили!" << endl;
		}
		break;

	case 8:
		cout << "Этот кот ест только пиццу. Введите 1, чтобы покормить его." << endl;
		cin >> b;
		if (b = 1)
		{
			cout << "Кот покормлен!" << endl;
		}
		else
		{
			cout << "Кота не покормили!" << endl;
		}
		break;

	case 9:
		cout << "Этот кот ест только салаты. Введите 1, чтобы покормить его." << endl;
		cin >> b;
		if (b = 1)
		{
			cout << "Кот покормлен!" << endl;
		}
		else
		{
			cout << "Кота не покормили!" << endl;
		}
		break;

	case 10:
		cout << "Этот кот ест только пироженные. Введите 1, чтобы покормить его." << endl;
		cin >> b;
		if (b = 1)
		{
			cout << "Кот покормлен!" << endl;
		}
		else
		{
			cout << "Кота не покормили!" << endl;
		}
		break;
	default:
		cout << "У нас всего 10 котов:)" << endl;
		break;
	}

	system("pause"); 
    return 0;
}
