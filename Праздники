#include "stdafx.h"
#include<iostream>
using namespace std;

int main()
{
	setlocale(LC_ALL, "RUSSIAN");
	int a, b;
	cout << "А сейчас нам нужно выбрать праздник." << endl;
	cout << "У нас есть Новый год, 23 февраля, 8 Марта, Масленница, День матери" << endl;
	cout << "Введите 1, 2, 3, 4, 5 соответственно, чтобы выбрать праздник" << endl;
	cin >> a;

	switch (a)
	{
	case 1:
		cout << "Праздник к нам приходит! Счастливого Нового года!" << endl;
		break;

	case 2:
		cout << "Праздник для всех мужчин! Не дай в обиду родных и близких!" << endl;
		break;

	case 3:
		cout << "Самые красивые цветы и самые тёплые слова самым лучшим девушкам!" << endl;
		break;

	case 4:
	    cout << "Праздник весны! Блины, чучело и хороводы!" << endl;
		break;

	case 5:
		cout << "Праздник для любимых матерей! Вы у нас самые лучшие!" << endl;
		break;
	default:
		cout << "В эти дни праздников нет" << endl;
		break;
	}

	system("pause");
	return 0;
}
